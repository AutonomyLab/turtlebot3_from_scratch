<launch>

	<arg name="robot" default="1" doc="Whether launchfile is run on turtlebot (0) or on remote PC (1)"/>

	<group if="$(arg robot)">
	    <machine name="turtlebot" address="turtlebot1" env-loader="/home/student/install/env.sh" user="student"/>
	    <node pkg="rosserial_python" type="serial_node.py" name="serial_node">
	    <param name="port" value="/dev/ttyACM0"/>
	    <param name="baud" value="115200"/>
	</node>
    </group>

    <group unless="$(arg robot)">
	    <machine name="turtlebot" address="localhost"/>
	    <node pkg="rosserial_python" type="serial_node.py" name="serial_node">
	    <param name="port" value="/dev/ttyACM0"/>
	    <param name="baud" value="115200"/>
	</node>
    </group>

</launch>